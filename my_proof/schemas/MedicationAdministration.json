{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MedicationAdministration Schema",
  "type": "object",
  "required": ["id", "resourceType", "status", "medicationCodeableConcept", "subject"],
  "properties": {
    "id": {
      "type": "string"
    },
    "resourceType": {
      "const": "MedicationAdministration"
    },
    "status": {
      "const": "completed"
    },
    "medication": {
      "type": "object",
      "required": ["concept"],
      "properties": {
        "concept": {
          "type": "object",
          "required": ["coding", "text"],
          "properties": {
            "coding": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["system", "code"],
                "properties": {
                  "system": {
                    "const": "http://www.nutridao.com/fhir/supplement"
                  },
                  "code": {
                    "type": "string"
                  },
                  "display": {
                    "type": "string"
                  }
                }
              }
            },
            "text": {
              "type": "string"
            }
          }
        }
      }
    },
    "subject": {
      "type": "object",
      "required": ["reference"],
      "properties": {
        "reference": {
          "type": "string"
        },
        "display": {
          "type": "string"
        }
      }
    }
  }
} 